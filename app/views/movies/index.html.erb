
<center><h1>Movie Reviews</h1></center>
 <div class="row">
     <div class="col-md-3"></div>
     <div class="col-md-6">
      
        <% Movie.all.each do |movie| %>
        
        <div class="card">
               <div class="pull-right">
                   <%= link_to  edit_movie_path(movie) do %>
                    <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to  movie_path(movie), method: :delete, data: {confirm: "Are you sure to delete ?"} do %>
                    <i class="fa fa-trash" style="color:red"></i>
                    <% end %>
               </div>
               <%= link_to  movie_path(movie) do %>
               <h1><%= movie.title %></h1> <% end %>
        <p><%= movie.description %></p><br>
        <%= movie.gener %><br>
        <%= movie.year %><br>
        <hr>
    </div>
   
      <% end %>
    
     </div>
     <div class="col-md-3"></div>
     
 </div>


<%= link_to  "Add Movie", new_movie_path %>